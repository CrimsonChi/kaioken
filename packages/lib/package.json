{
  "name": "kiru",
  "version": "0.45.2",
  "description": "A batteries-included, easy-to-use rendering library with a tiny footprint",
  "main": "dist/index.js",
  "type": "module",
  "homepage": "https://kirujs.dev",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./form": {
      "types": "./dist/form/index.d.ts",
      "default": "./dist/form/index.js"
    },
    "./router": {
      "types": "./dist/router/index.d.ts",
      "default": "./dist/router/index.js"
    },
    "./swr": {
      "types": "./dist/swr.d.ts",
      "default": "./dist/swr.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "default": "./dist/utils.js"
    },
    "./ssr": {
      "types": "./dist/ssr/index.d.ts",
      "default": "./dist/ssr/index.js"
    },
    "./ssr/client": {
      "types": "./dist/ssr/client.d.ts",
      "default": "./dist/ssr/client.js"
    },
    "./ssr/server": {
      "types": "./dist/ssr/server.d.ts",
      "default": "./dist/ssr/server.js"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx.d.ts",
      "default": "./dist/jsx.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx.d.ts",
      "default": "./dist/jsx.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kirujs/kiru"
  },
  "scripts": {
    "build": "rm -rf dist && pnpm i && tsc",
    "test": "node --test",
    "dev": "tsc --watch"
  },
  "types": "index.d.ts",
  "keywords": [
    "kiru",
    "kirujs",
    "kiru.js",
    "dom",
    "jsx",
    "html",
    "virtual-dom",
    "reactive",
    "signal"
  ],
  "author": "LankyMoose",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/jsdom": "^21.1.7",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.1",
    "ts-mocha": "^10.1.0",
    "typescript": "^5.9.2"
  }
}
